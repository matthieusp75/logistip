<div class="d-flex" style='margin-top: 80px'>
  <div class="d-flex flex-column " style='width: 350px;'>
    <strong><%= link_to 'Produit', dashboard_path, class: 'text-decoration-none link-page'  %></strong>
    <%= link_to 'Commande Client', '#', class: 'text-decoration-none link-page'  %>
    <%= link_to 'Commande Fournisseurs', orders_path, class: 'text-decoration-none link-page'   %>
  </div>
  <div class="container flex-grow-1">
    <div class="row justify-content-center">
      <% @products.each do |product| %>
        <div class="col-4">
            <% if (product.order_lines.count > 0 && product.order_lines.last.order.planned_delivery_date < Date.today) || product.order_lines.count.zero? %>
              <div class="container">
                <li class="list-group-item">
                  <%= render partial: 'shared/card_product', locals: {product: product}  %>
                </li>
              </div>
            <% end %>
        </div>
      <% end %>
        <div class="text-center mt-5">
          <%= link_to "Commandes fournisseur", orders_path, class: 'btn btn-dark'  %>
        </div>
    </div>
  </div>
</div>
