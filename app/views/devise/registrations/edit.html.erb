<div class="container text-center p-2" style='width: 400px; margin: 12px auto' >
  <h2>Mettre à jour mon profil</h2>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: false,
                  label: "Prénom" %>
      <%= f.input :last_name,
                  required: false,
                  label: "Nom" %>
      <%= f.input :telephone,
                  required: false,
                  label: "Numéro de téléphone" %>
      <%= f.input :email,
                  required: true,
                  autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation : <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Nouveau mot de passe",
                  hint: "Ne rien saisir dans cette case si vous ne souhaitez pas le modifier",
                  required: false,
                  input_html: { autocomplete: "Nouveau mot de passe" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmer votre nouveau mot de passe",
                  required: false,
                  input_html: { autocomplete: "Veuillez confirmer votre nouveau mot de passe" } %>
      <%= f.input :current_password,
                  label: "Mot de passe actuel",
                  hint: "Veuillez saisir votre mot de passe pour confirmer la modification",
                  required: true,
                  input_html: { autocomplete: "Mot de passe actuel" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour mon profil", class:"btn btn-dark" %>
    </div>
  <% end %>
<br>
<br>
<br>
  <br><h2>Supprimer mon compte</h2>

  <p>Vous souhaitez nous quitter ?</p>
  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr(e) de vous ?" }, method: :delete, class:"btn btn-dark" %>
<br>
<br>
  <%= link_to "Précédent", :back, class:"btn btn-dark" %>
</div>
