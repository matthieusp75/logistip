<div class="container text-center p-2" style='width: 400px; margin: 12px auto; margin-top:70px' >
  <h2>Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "Mot de passe actuel" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class:"btn btn-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
