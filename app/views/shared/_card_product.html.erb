<div class="card-product my-2 align-items-center">
  <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="flex-grow-1">
    <div class="card-product-infos text-center">
      <div style="font-size: 20px">
        <%= product.title %>
        <p style="font-size: 12px"><%= product.supplier.name %></p>
      </div>
      <div style="font-size: 12px" text-center>
      <p><%= product.description %></p>
      <p>Quantité en stock: <%= product.quantity_in_stock %></p>
      <p>Quantité par colis: <%= product.quantity_per_case %></p>
      <p>Quantité minimum de commande: <%= product.minimum_order_quantity %> colis</p>
      <p><%= product.buying_price %>€/UVC - Soit <%= product.buying_price * product.quantity_per_case %>€ le colis</p>
      </div>
    </div>
    <%# <div class='me-1'> %>
    <%= simple_form_for @order_line, html: {class: 'd-flex justify-content-center me-5'} do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>

        <%= f.input :quantity, label: false, type: 'number', input_html: {class: 'quantity text-center',
                                                                          placeholder: "Minimum #{product.minimum_order_quantity} colis",
                                                                          min: product.minimum_order_quantity } %>

      <%= f.submit 'Précommander', class: 'btn btn-dark mx-2 p-1 align-self-center', style:'width:156px; height:32px' %>
    <% end %>
    <%# </div> %>
  </div>
</div>
